				</div>
			</div>
	    </div>
	    <!-- If we need pagination -->
	    <div class="swiper-pagination large" id="shop-home-large-carousel-pagination"></div>
	    
	    <!-- If we need navigation buttons -->
	    <div class="swiper-button-prev large left-arrow" id="shop-home-large-carousel-prev"></div>
	    <div class="swiper-button-next large right-arrow" id="shop-home-large-carousel-next"></div>
	</div>
   
    
	<section class="card-carousel">
		<heading>TODAY'S TOP PICS</heading>
		<div data-slides-num="3" data-space-between="30" class="tiu-carousel shop-carousel-small small1 swiper-container" id="shop-home-small-carousel1">
			<div class="swiper-wrapper">
				{% for product in collections.top-pics.products limit:9 %}
              	<a class="card card1 swiper-slide" href="{{ product.url }}">
					<div class="card-image" style="background-image: url('{{ product.featured_image | img_url: 'large' }}');"></div>
					<div class="card-info-container">
						<h1 class="title">{{ product.title }}</h1>
						<span class="price">{{ product.price | money }}</span>
					</div>
				</a>
              	{% endfor %}
			</div>
			<div class="navigation">
				<span class="left-arrow swiper-button-prev" id="shop-home-small-carousel1-prev"></span>
				
					<div class="swiper-pagination" id="shop-home-small-carousel1-pagination"></div>

				<span class="right-arrow swiper-button-next" id="shop-home-small-carousel1-next"></span>
			</div>
		</div>
	</section>
    
