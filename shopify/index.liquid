{% unless settings.homepage_page == blank or pages[settings.homepage_page].empty? %}
{% assign page = pages[settings.homepage_page] %}
{% assign base_asset_url = "http://alpha.community.toneitup.com/wp-content/themes/toneitup/src/images/" %}
<div class="rte grid-margins">
<!--   {{ page.content }} -->
  <div id="static-wrapper" class="shop">

	<!-- Slider main container -->
	<div data-slides-num="1" class="tiu-carousel shop-main-carousel swiper-container shop-carousel-large" id="shop-home-large-carousel">
	    <!-- Additional required wrapper -->
	    <div class="swiper-wrapper">
	        <!-- Slides -->
	        <div class="swiper-slide" style="background-image: url({{ base_asset_url }}beach.png);">
	        	<div class="main-carousel-text-container">
<!-- 					<img class="slide-image" src="{{ base_asset_url }}beach.png"> -->
					<p class="headline">Perfect Bikini Body<br> This Summer</p>
					<img id="logo-alt" class="logo" src="{{ base_asset_url }}logo-large.png">
					<h2 class="title">BIKINI SERIES</h2>
					<a class="cta">JOIN TODAY</a>
					<span>WANT TO LEARN HOW IT WORKS?</span>
					<a>CLICK HERE</a>
				</div>
			</div>
			<div class="swiper-slide" style="background-image: url({{ base_asset_url }}shop-main-carousel2.jpg);">
	        	<div class="main-carousel-text-container right">
<!-- 					<img class="slide-image" src="{{ base_asset_url }}shop-main-carousel2.jpg"> -->
